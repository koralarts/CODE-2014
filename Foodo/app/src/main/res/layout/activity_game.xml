<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.40"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game question"
            android:textColor="@color/red"
            android:textSize="40dp"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:id="@+id/question_name"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="how aojaf fhal hjkadlh l djskfa  fs?? afhjksd la ? adhslfd jk hjkdlfashjlk fhj klh klshdf jklh?"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="20dp"
            android:paddingBottom="10dp"
            android:id="@+id/question" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:weightSum="1">

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/toggleAnswer1"
                android:padding="20dp"
                android:textOff="Option 1"
                android:textOn="Option 1"
                android:layout_weight="0.5" />

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textOff="Option 3"
                android:textOn="Option 3"
                android:id="@+id/toggleAnswer3"
                android:padding="20dp"
                android:layout_weight="0.5" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textOff="Option 2"
                android:textOn="Option 2"
                android:id="@+id/toggleAnswer2"
                android:padding="20dp"
                android:layout_weight="0.5" />

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textOff="Option 4"
                android:textOn="Option 4"
                android:id="@+id/toggleAnswer4"
                android:padding="20dp"
                android:layout_weight="0.5" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/list_divider"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Play"
            android:id="@+id/button_submit_answer"/>
    </LinearLayout>


</LinearLayout>
